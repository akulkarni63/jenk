pipeline {
    agent any

    stages {
        stage('Fetch code') {
            steps {
                git branch: 'main', url: 'https://github.com/akulkarni63/jenk.git'
            }
        }

        stage('Deploy app') {
            steps {
                sh '''
                sudo cp -R * /var/www/html
                '''
            }
        }
    }
}
